<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>
		{% block title %} SF3 NETWORK {% endblock %}
	</title>
	{% block stylesheets %}
		<link rel="stylesheet" href="{{asset('assets/bootstrap/css/bootstrap.css')}}" type="text/css">
		<link rel="stylesheet" href="{{asset('assets/css/styles.css')}}" type="text/css">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
  		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/v4-shims.css">
	{% endblock %}
	{% block javascripts %}
		<script type="text/javascript">
			var URL = "{{app.request.getSchemeAndHttpHost()}}/HiYou/web/app_dev.php";
		</script>
		<script src="{{asset('assets/js/jquery.min.js')}}"></script>
		<script src="{{asset('assets/bootstrap/js/bootstrap.min.js')}}"></script>
	{% endblock %}
</head>
<body>
	<header>
  		<nav class="navbar navbar-expand-sm bg-info navbar-dark">
		  <ul class="navbar-nav">
		    <li class="nav-item active">
		      <a class="nav-link" href="{{path("app_homepage")}}">
		      	<span class="fab fa-angellist"></span>
		      	HiYou
		      </a>
		    </li>
		   {%if app.user == null%} 
		    <li class="nav-item">
		      <a class="nav-link" href="{{path("login")}}">
		      	<span class="fas fa-sign-in-alt"></span>
		      	Entrar
		      </a>
		    </li> 
		    <li class="nav-item">
		      <a class="nav-link" href="{{path("register")}}">
		      	<span class="fas fa-user-plus"></span>
		      	Registro
		      </a>
		    </li>
		   {% endif %} 
		  {%if app.user != null%}
		    <li class="nav-item dropdown">
		        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		        	<span class="fas fa-user-circle"></span>	
		          	{{app.user.name}} {{app.user.surname}}
		        </a>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
		          <a class="dropdown-item" href="#">
		          	<span class="fas fa-user"></span>
		          	Mi perfil
		          </a>
		          <a class="dropdown-item" href="#">
		          	<span class="fas fa-cog"></span>
		          	Mis datos
		          </a>
		          <div class="dropdown-divider"></div>
		          <a class="dropdown-item" href="{{path("logout")}}">
					<span class="fas fa-sign-out-alt"></span>	
		          	Salir
		      	  </a>
		          <a class="dropdown-item" href="#">
		          	<span class="fas fa-info-circle"></span>
		          	Ayuda
		      	  </a>
		        </div>
	      	</li>		  	
		  {% endif %}
		  </ul>
		</nav>
	</header>
	<section id="content">
		<div class="container">
			<div class="col-lg-12">
				{%for message in app.session.flashbag().get('status')%}
					<div class="alert alert-success">{{message}}</div>
				{% endfor%}
				{%for message in app.session.flashbag().get('error')%}
					<div class="alert alert-warning">{{message}}</div>
				{% endfor%}	
			</div>
		</div>
		<div class="clearfix"></div>
		{% block content %}
			content default
		{% endblock %}	
	</section>
	<footer>
		<hr/>
		<p>Desarrollar una red social con Symfony3 - Danny Caldeira - dannyelportu2013@gmail.com</p>
	</footer>
</body>
</html>