{% extends "AppBundle:Layouts:layout.html.twig"%}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{asset('assets/js/custom/home.js')}}"></script>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div id="timeline" class="col-md-7 box-default">
                <h1 class="box-header">Timeline</h1>
                <hr/>
                <div class="box-content">
                    {% for publication in pagination %}
                        <div class="row publication-item">
                            <div class="col-md-2">
                                <div class="avatar">
                                    {% if publication.user.image == null %}
                                        <img src="{{asset('assets/images/default.png')}}" alt="">	
                                    {%else%}
                                        <img src="{{asset('uploads/users/'~publication.user.image)}}" alt="">
                                    {% endif %}
                                </div>	                            
                            </div>
                            <div class="col-md-10 publication-item-content">
                                <p>
                                    <a class="pub-name-link" href="#">
                                        {{publication.user.name}} {{publication.user.surname}}
                                    </a>
                                    -
                                    <span class="pub-nick">{{publication.user.nick}}</span>
                                    -
                                    <span class="pub-date">
                                        {{publication.createdAt|long_time}}
                                    </span>
                                </p>
                                <div class="box-default">{{publication.text}}</div>

                                {%if (publication.user.id is defined) and (publication.user.id == app.user.id)%}
                                    <span data-id="{{publication.id}}" class="btn-delete-pub fas fa-trash-alt fas fa-images" aria-hidden="true"></span> 
                                {%endif%}
                                {% if(publication.document is defined) and (publication.document != null) %}

                                    <a href="{{asset('uploads/publications/documents/'~publication.document)}}" class="btn-doc fas fa-download" aria-hidden="true" target="_blank">

                                    </a>
                                {%endif%}
                                {% if(publication.image is defined) and (publication.image != null) %}

                                    <span class="btn-img fas fa-images" aria-hidden="true"></span>
                                    <div class="clearfix"></div>
                                    <div class="pub-image">
                                        <img src="{{asset('uploads/publications/images/'~publication.image)}}" alt="">
                                    </div>
                                {%endif%}
                                <br>
                                <hr>	
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    {% endfor %}
                </div> 
                <hr>
                <div class="box-content">
                    {{knp_pagination_render(pagination)}}
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="user-card" class="col-md-5">
                <div class="box-default">
                    <div class="avatar">
                        {% if app.user.image == null %}
                            <img src="{{asset('assets/images/default.png')}}" alt="">	
                        {%else%}
                            <img src="{{asset('uploads/users/'~app.user.image)}}" alt="">
                        {% endif %}
                    </div>
                    <div class="name-surname">
                        <a href="#">{{app.user.name}} {{app.user.surname}}</a>
                        <div class="clearfix"></div>
                        <span class="nickname">
                            {{app.user.nick}}
                        </span>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="new-publication" class="box-default">
                    <h4 class="box-header" style="text-align:center;">Crear publicaci√≥n</h4>
                    <hr>
                    {{form_start(form, {action: '', 'method':'POST'})}}
                    {{form_end(form)}}
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
{%endblock%}