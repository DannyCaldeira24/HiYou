{% extends "AppBundle:Layouts:layout.html.twig"%}
{% block content %}
    <div class="container">
    	<div class="row">
			<div class="col-md-7 box-default timeline">
				<h1>Timeline</h1>
				<div class="box-content">
					PUBLICACIONES
				</div>
			</div>
			<div id="user-card" class="col-md-4">
				<div class="box-default">
					<div class="avatar">
		                {% if app.user.image == null %}
		                    <img src="{{asset('assets/images/default.png')}}" alt="">	
		                {%else%}
		                    <img src="{{asset('uploads/users/'~app.user.image)}}" alt="">
		                {% endif %}
					</div>
					<div class="name-surname">
						<a href="#">{{app.user.name}} {{app.user.surname}}</a>
						<div class="clearfix"></div>
						<span class="nickname">
							{{app.user.nick}}
						</span>
					</div>
					<div class="clearfix"></div>
				</div>
				<div id="new-publication" class="box-default">
					<h3 class="box-header" style="text-align:center;">Crear publicaci√≥n</h3>
					<hr>
                    {{form_start(form, {action: '', 'method':'POST'})}}
                    {{form_end(form)}}
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
    </div>
{%endblock%}